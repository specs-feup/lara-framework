{
  "preset": "ts-jest/presets/js-with-ts-esm",
  "testEnvironment": "node",
  "notify": true,
  "notifyMode": "always",
  //"verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov"],
  "collectCoverageFrom": ["src/**/*.(t|j)s"],
  "coverageProvider": "v8",
  "moduleNameMapper": {
    "(.+)\\.js": "$1"
  }
}
